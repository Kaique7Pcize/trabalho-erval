# Função para ler um vetor de 10 posições
def ler_vetor():
    vetor = []
    for i in range(10):
        elemento = int(input("Digite o valor para a posição {}: ".format(i)))
        vetor.append(elemento)
    return vetor

# Função para contar quantos valores pares um vetor possui
def contar_pares(vetor):
    count = 0
    for elemento in vetor:
        if elemento % 2 == 0:
            count += 1
    return count

# Ler o vetor de 10 posições
vetor = ler_vetor()

# Contar quantos valores pares o vetor possui
pares = contar_pares(vetor)

# Escrever o resultado
print("O vetor possui {} valores pares.".format(pares))
